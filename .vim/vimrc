" Don't pretend to be vi
set nocompatible

" Disable the default Vim startup message
set shortmess+=I

" Show line numbers with relative line numbers
set number relativenumber

" Tune searching to fit my needs
set ignorecase incsearch "smartcase

" Tab settings (see http://vimcasts.org/episodes/tabs-and-spaces/)
set tabstop=8 softtabstop=4 shiftwidth=4 expandtab

" Indentation settings
set autoindent smartindent

" Fix backspace's unintuitive behavior
set backspace=indent,eol,start

" Allow hidden buffers
set hidden

" TODO play around with following settings and add more
" Enable mouse support
set mouse+=a

" Always show the status line at the bottom, even if you only have one window open
set laststatus=2


" Remaps
nmap Q <Nop> " Disable Ex mode
" TODO add remap for copy & paste from system clipboard?
" Switching between windows?


" Automatically install plugins on first run
let plugged = $HOME.'/.vim/plugged'
if !isdirectory(plugged)
    autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

" Plugin list
call plug#begin(plugged)
Plug 'ntpeters/vim-better-whitespace'
Plug 'gruvbox-community/gruvbox'
"Plug 'neoclide/coc.nvim', {'branch': 'release'}
" TODO others:
" - git (maybe fugitive?)
" - highlighted yank
" - rename? or does coc do this
" - auto pairs
" - auto detect indentation
"       tpope/sleuth
"       ciaranm/detectindent
" - fzf (maybe ctrl-p?)
" - lang servers and similar (coc?)
" - markdown highlighting
call plug#end()


" Colorscheme settings
syntax on
set background=dark
let g:gruvbox_contrast_dark='hard'
colorscheme gruvbox


